package bucles;

import java.util.*;

public class bucles13 {

	/*
	 * Programa que pide 5 numeros entre 0 y 10. Si el dato introducido no esta
	 * entre 0 y 10 o no es un entero, vuelve a solicitarlo.
	 */

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		int nota;
		int i = 1; // COntador de nยบ de pregunta.
		while (i <= 5) {
			// Comprobamos que el dato introducido es un entero
			while (entrada.hasNextInt() == false){
				
				System.out.println("Nota incorrecta, debe ser un numero entero:");
				entrada.nextLine();
				
		
			}
			while (nota > 10){
				System.out.println("Numero incorrecto, debe  estar entre el 0 y el 10");
				nota = entrada.nextInt();
			}
		

		}

	}

}
