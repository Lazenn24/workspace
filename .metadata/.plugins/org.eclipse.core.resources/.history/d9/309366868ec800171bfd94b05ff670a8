//6.- Escribe un programa que pida por consola los precios de diez productos y los guarde en un array.
//Haz que después se muestren todos los valores mediante un bucle for.
package Arrays;

import java.util.*;

public class EjercicioArrays1_06 {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner (System.in);
		
		float producto[] = new float[10];
		
		System.out.println("Escribr la nota del primer producto:");
		producto[0] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del segundo producto:");
		producto[1] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del tercer producto:");
		producto[2] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del cuarto producto:");
		producto[3] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del quinto producto:");
		producto[4] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del sexto producto:");
		producto[5] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del séptimo producto:");
		producto[6] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del octavo producto:");
		producto[7] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del noveno producto:");
		producto[8] = entrada.nextFloat();
		
		System.out.println("Escribr la nota del décimo producto:");
		producto[9] = entrada.nextFloat();
		
		for(int i = 0; i < producto.length; i++){
			System.out.println("El precio del producto " + (i+1) + " es " + producto[i]+ ".");
		
			
		}

	}

}
